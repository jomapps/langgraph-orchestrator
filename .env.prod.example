# LangGraph Orchestrator - Production Environment Configuration
# Copy to .env and fill with real values for production

# Environment Settings
ENVIRONMENT=production
DEBUG=false

# Security & Core (Mark as SECRET in deployment platform)
SECRET_KEY=${SECRET_KEY}
API_KEY=${API_KEY}

# Application Settings
API_HOST=0.0.0.0
API_PORT=8003
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_STRUCTURED_LOGGING=true

# Performance Settings
MAX_WORKFLOWS=50
MAX_AGENTS=10
WORKER_PROCESSES=4

# External Services (Production)
AUTO_MOVIE_BASE_URL=https://auto-movie.ft.tc
BRAIN_SERVICE_BASE_URL=https://brain.ft.tc
TASK_SERVICE_BASE_URL=https://tasks.ft.tc

# Database Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_DB=${REDIS_DB}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_CONNECTION_TIMEOUT=5
REDIS_MAX_CONNECTIONS=50

# Monitoring & Reliability
ENABLE_TYPE_SAFETY_CHECKS=true

# LLM Configuration (OpenRouter)
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=${OPENROUTER_DEFAULT_MODEL}
OPENROUTER_BACKUP_MODEL=${OPENROUTER_BACKUP_MODEL}

# Brain Service WebSocket URL for MCP communication
BRAIN_SERVICE_WS_URL=wss://brain.ft.tc/mcp

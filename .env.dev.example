# LangGraph Orchestrator - Development Environment Configuration
# Copy to .env and fill with real values for development

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Security & Core
SECRET_KEY=dev-secret-key-change-in-production
API_KEY=dev-api-key-change-in-production

# Application Settings
API_HOST=0.0.0.0
API_PORT=8003
LOG_LEVEL=DEBUG
LOG_FORMAT=pretty
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_STRUCTURED_LOGGING=false

# Performance Settings
MAX_WORKFLOWS=10
MAX_AGENTS=5
WORKER_PROCESSES=2

# External Services (Development)
AUTO_MOVIE_BASE_URL=http://localhost:3010
BRAIN_SERVICE_BASE_URL=http://localhost:8002
TASK_SERVICE_BASE_URL=http://localhost:8001

# Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CONNECTION_TIMEOUT=5
REDIS_MAX_CONNECTIONS=20

# Monitoring & Reliability
ENABLE_TYPE_SAFETY_CHECKS=true

# LLM Configuration (OpenRouter)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-sonnet-4
OPENROUTER_BACKUP_MODEL=qwen/qwen3-vl-235b-a22b-thinking

# Brain Service WebSocket URL for MCP communication
BRAIN_SERVICE_WS_URL=ws://localhost:8002/mcp

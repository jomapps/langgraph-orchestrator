# Local Development Environment Variables
ENVIRONMENT=development
DEBUG=true

# Local Redis Configuration (Windows Docker Desktop)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
LOG_LEVEL=INFO

# Performance Settings (reduced for local testing)
MAX_WORKFLOWS=50
MAX_AGENTS=10
WORKER_PROCESSES=1

# External Service URLs (for testing)
AUTO_MOVIE_BASE_URL=https://auto-movie.ft.tc
BRAIN_SERVICE_BASE_URL=https://brain.ft.tc
TASK_SERVICE_BASE_URL=https://tasks.ft.tc

# Security (development only)
SECRET_KEY=dev-secret-key-change-in-production
API_KEY=dev-api-key-123

# Monitoring
LOG_FORMAT=pretty
ENABLE_STRUCTURED_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=true